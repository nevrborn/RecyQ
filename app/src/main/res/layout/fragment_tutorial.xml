<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white">

    <ImageView
        android:id="@+id/tutorials_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="25dp"
        android:src="@drawable/recyq_logo"
        android:background="@android:color/white"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

        <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:layout_below="@id/tutorials_logo">

        <TextView
            android:id="@+id/tutorial_steps"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="25dp"
            android:textSize="14sp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/tutorial_linearlayout_2"
                    android:layout_width="fill_parent"
                    android:layout_height="200dp"
                    android:background="@color/colorBlue"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tutorial_title_2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="25dp"
                        android:textSize="35sp"
                        android:textColor="@android:color/white"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tutorial_linearlayout_1"
                    android:layout_width="fill_parent"
                    android:layout_height="200dp"
                    android:background="@color/colorGreen">

                    <TextView
                        android:id="@+id/tutorial_title_1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="25dp"
                        android:textSize="35sp"
                        android:textColor="@android:color/white"/>

                </LinearLayout>

            </RelativeLayout>

        <TextView
            android:id="@+id/tutorial_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center|top"
            android:layout_marginTop="12dp"
            android:textSize="18sp"
            android:lines="4"
            android:padding="20dp"
            android:textColor="@color/colorGrey"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tutorial_linearlayout_pagecontrol"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/tutorial_page_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pagecontrol_circle"
            android:padding="10sp"/>

        <ImageView
            android:id="@+id/tutorial_page_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pagecontrol_circle"
            android:padding="10sp"
            android:alpha="0.5"/>

        <ImageView
            android:id="@+id/tutorial_page_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pagecontrol_circle"
            android:padding="10sp"
            android:alpha="0.5"/>

        <ImageView
            android:id="@+id/tutorial_page_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pagecontrol_circle"
            android:padding="10sp"
            android:alpha="0.5"/>

    </LinearLayout>

    <Button
        android:id="@+id/tutorial_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/tutorial_start"
        android:gravity="center"
        android:layout_gravity="center"
        style="@style/button_grey"
        android:textSize="25sp"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"/>



</RelativeLayout>