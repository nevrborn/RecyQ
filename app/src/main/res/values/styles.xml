<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorGreyLight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="editText_grey">
        <item name="android:textColor">@color/colorGreyLight</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">fonts/pt_mono.ttf</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:background">@drawable/edittext_custom</item>
    </style>

    <style name="button_grey">
        <item name="android:textColor">@color/colorGreyLight</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">fonts/pt_mono.ttf</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/edittext_custom</item>
    </style>

    <style name="button_borderless">
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">fonts/pt_mono.ttf</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:background">@android:color/white</item>
    </style>

</resources>
